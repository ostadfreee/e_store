<%- model_class = Category -%>
<% provide(:title ,'Category') %>
<%# provide(:header ,'Category') %>


<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><small><%=model_class.human_attribute_name(:id) %></small></th>
      <th><small><%= model_class.human_attribute_name(:name) %></small></th>
      <th><small><%= model_class.human_attribute_name(:created_at) %></small></th>
      <th><small><%=t '.actions', :default => t("helpers.actions") %></small></th>
    </tr>
  </thead>
  <tbody>
    
      <tr>
            <% @categories.each do |category| %>
        <td><%= category.id %></td>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%=l category.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_category_path(category), :class => 'btn btn-sm' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      category_path(category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_category_path,
            :class => 'btn btn-primary btn-mini' %>
<%= will_paginate @categories%>
