<%- model_class = Category -%>
<%# provide(:header ,'Category') %>

<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th><strong><%= model_class.human_attribute_name(:name) %></strong></th>
      <th><strong>products</strong></th>
    </tr>
   </thead>
   <tbody>
     <tr>
      <td><%= @category.name %></td>
       <td><% @category.products.each do |product|  %> 
      <%= link_to product.name, {:controller => 'products', :action => 'show', :id => product.id}%> </br>
        <% end %>
      </td>
      </tr>
    </tbody>
  </table>

 
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn btn-mini'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_category_path(@category), :class => 'btn btn-mini' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
